<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/correctionWord"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:text="Correction"
        android:textColor="#00FF00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/explanationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/errorWord"
        app:layout_constraintTop_toBottomOf="@+id/inputText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Ici tapez votre texte"
        android:ems="10"
        android:gravity="top"
        android:hint="Texte Ã  corriger"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/correctionWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/correctionButton"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/paper"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:src="@drawable/paper"
        tools:srcCompat="@tools:sample/avatars"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/vocalButton"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="36dp"
        android:background="#FFFFFF"
        android:src="@drawable/megaphone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/correctionButton"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:src="@drawable/megaphone"
        tools:srcCompat="@tools:sample/avatars"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/errorWord"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:text="Erreur"
        android:textColor="#F00"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/explanationButton"
        app:layout_constraintEnd_toStartOf="@+id/correctionWord"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/explanationButton"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:layout_toEndOf="@+id/errorWord"
        android:background="@android:color/holo_blue_light"
        android:text="Explication"
        android:onClick="onClick"
        app:layout_constraintBottom_toTopOf="@+id/vocalButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>